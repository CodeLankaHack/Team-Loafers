<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.user.poly_glot.traveller">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <TextView android:text="Where you would like to go..."
        android:textSize="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/www"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp" />



    <ImageButton
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:text="New Button"
        android:id="@+id/button"
        android:src="@drawable/i"
        android:layout_marginTop="0dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:text="New Button"
        android:src="@drawable/ee2"
        android:onClick="x"

        android:id="@+id/button5"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />


    <ImageButton
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:text="New Button"
        android:id="@+id/buttn6"
        android:src="@drawable/ee3"
        android:layout_below="@+id/button5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp" />

        <ImageButton
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:text="New Button"
            android:id="@+id/button6"
            android:src="@drawable/ee4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="41dp"
            android:layout_below="@+id/buttn6" />

        <ImageButton
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:text="New Button"
            android:src="@drawable/i"

            android:id="@+id/butto4n5"
            android:layout_below="@+id/button6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp" />

</RelativeLayout>
</ScrollView>
